<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mXmln="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.orvibo.homemate.view.custom.NavigationGreenBar
        android:id="@+id/nbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mXmln:text="@string/motion_detection" />

    <TextView
        android:id="@+id/tv_danale_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_detect_level"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:textColor="@color/device_name_en_color"
        android:layout_marginLeft="15dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/divide_line_color"/>

    <RadioGroup
        android:id="@+id/rg_detect_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/rb_detect_close"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:button="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/detect_radio_button_selector"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="@string/alarm_close"/>

        <View
            android:id="@+id/v_close"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/divide_line_color"/>

        <RadioButton
            android:id="@+id/rb_detect_low"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:button="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/detect_radio_button_selector"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="@string/alarm_low"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/divide_line_color"/>

        <RadioButton
            android:id="@+id/rb_detect_middle"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:button="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/detect_radio_button_selector"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="@string/alarm_middle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/divide_line_color"/>

        <RadioButton
            android:id="@+id/rb_detect_high"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:button="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableRight="@drawable/detect_radio_button_selector"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="@string/alarm_high"/>
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line_color"/>

</LinearLayout>