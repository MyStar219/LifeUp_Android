                android:textSize="@dimen/text_normal" />

            <RadioButton
                android:id="@+id/eightSecRadioButton"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/item_selector"
                android:button="@null"
                android:drawableRight="@drawable/delay_time_check_selector"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:text="@string/eight_sce"
                android:textSize="@dimen/text_normal" />

            <RadioButton
                android:id="@+id/nineSecRadioButton"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/item_selector"
                android:button="@null"
                android:drawableRight="@drawable/delay_time_check_selector"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:text="@string/nine_sce"
                android:textSize="@dimen/text_normal" />

            <RadioButton
                android:id="@+id/tenSecRadioButton"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/item_selector"
                android:button="@null"
                android:drawableRight="@drawable/delay_time_check_selector"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:text="@string/ten_sce"
                android:textSize="@dimen/text_normal" />

            <RadioButton
                android:id="@+id/thirtySecRadioButton"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:background="@drawable/item_selector"
                android:button="@null"
                android:drawableRight="@drawable/delay_time_check_selector"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:text="@string/thirty_sce"
                android:textSize="@dimen/text_normal" />

            <RadioButton
                android:id="@+id/customSecRadioButton"
                android:layout_width="match_parent"
                android:layout_height="38dip"
                android:layout_marginTop="@dimen/margin_x4"
                android:background="@drawable/item_selector"
                android:button="@null"
                android:drawableRight="@drawable/delay_time_check_selector"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:text="@string/custom_time"
                android:textSize="@dimen/text_normal" />
        </RadioGroup>
    </ScrollView>
</LinearLayout>