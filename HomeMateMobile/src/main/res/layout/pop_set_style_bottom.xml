<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/style_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="#ffffff"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="72px"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:tag="0"
            >
            <com.orvibo.homemate.device.HopeMusic.widget.SelectImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bg_classical"
                android:tag="0"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="@dimen/text_normal"
                android:textColor="#686868"
                android:text="@string/effect_classical"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:tag="1"
            >
            <com.orvibo.homemate.device.HopeMusic.widget.SelectImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bg_modern"
                android:tag="1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="@dimen/text_normal"
                android:textColor="#686868"
                android:text="@string/effect_modern"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:tag="2"
            >
            <com.orvibo.homemate.device.HopeMusic.widget.SelectImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bg_acid_rock"
                android:tag="2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="@dimen/text_normal"
                android:textColor="#686868"
                android:text="@string/effect_rock"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:tag="3"
            >
            <com.orvibo.homemate.device.HopeMusic.widget.SelectImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bg_popular"
                android:tag="3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="@dimen/text_normal"
                android:textColor="#686868"
                android:text="@string/effect_pop"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:tag="4"
            >
            <com.orvibo.homemate.device.HopeMusic.widget.SelectImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bg_dance"
                android:tag="4"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="@dimen/text_normal"
                android:textColor="#686868"
                android:text="@string/effect_dance"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:tag="5"
            >
            <com.orvibo.homemate.device.HopeMusic.widget.SelectImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/bg_original_song"
                android:tag="5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:textSize="@dimen/text_normal"
                android:textColor="#686868"
                android:text="@string/effect_original"
                android:tag="6"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
