<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/board"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.creativityapps.badgedimageviews.BadgedSquareImageView
        android:id="@+id/badge_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:badgeColor="#FF0000"
        app:badgeGravity="top|right"
        app:badgeText="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/double_padding"
            android:layout_marginStart="@dimen/double_padding"
            android:text="{fa-heart-o}"
            android:textColor="#a5e047"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/menu_description"
            fontPath="fonts/Avenir-Bold.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/double_padding"
            android:layout_marginStart="@dimen/double_padding"
            android:layout_toRightOf="@+id/icon"
            android:text="My Apartment"
            android:textColor="#666666"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/bottom_menu_right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#e7e5e5" />

</LinearLayout>