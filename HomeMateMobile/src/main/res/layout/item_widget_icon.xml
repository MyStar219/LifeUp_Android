<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scene_gray"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/scene_icon_select_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:src="@drawable/scene_icon_select_mark" />

    <ImageView
        android:id="@+id/typeIcon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginTop="-8dp"
        android:src="@drawable/device_type_lighting" />

    <TextView
        android:id="@+id/typeName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="@dimen/padding_x2"
        android:paddingBottom="@dimen/padding_x6"
        android:text="@string/device_set_room_default"
        android:textColor="@color/font_black"
        android:textSize="@dimen/text_normal" />
</LinearLayout>