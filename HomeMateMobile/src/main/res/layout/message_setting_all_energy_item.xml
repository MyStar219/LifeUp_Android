<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/list_item"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_x4"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_x2"
            android:layout_marginBottom="@dimen/margin_x2"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/timeIntervalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_normal"
                android:text="@string/message_energy"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/timeRepeatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:layout_marginTop="@dimen/margin_x1"
                android:text="@string/energy_remind_time_duration"
                android:textColor="@color/gray" />

        </LinearLayout>

        <ImageView
            android:id="@+id/allInfoPushSetImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/socket_switch" />
    </LinearLayout>
</RelativeLayout>