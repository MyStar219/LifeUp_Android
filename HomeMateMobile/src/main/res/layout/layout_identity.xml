<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_height"
        android:gravity="center"
        android:layout_marginBottom="@dimen/margin_x4"
        android:layout_marginLeft="@dimen/margin_x2"
        android:layout_marginRight="@dimen/margin_x2"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.orvibo.homemate.view.custom.EditTextWithCompound
            android:id="@+id/phoneNumber_et"
            style="@style/et_common"
            android:layout_width="0.0dip"
            android:layout_marginRight="@dimen/margin_x2"
            android:layout_weight="2"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:digits="0123456789"
            android:maxLength="11" />

        <TextView
            android:id="@+id/send_tv"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/send_button_n"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/send_auth_code"
            android:textColor="@color/navigation_text_color"
            android:textSize="@dimen/text_normal" />
    </LinearLayout>

    <com.orvibo.homemate.view.custom.EditTextWithCompound
        android:id="@+id/auth_code_et"
        style="@style/et_common"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_x2"
        android:layout_marginRight="@dimen/margin_x2"
        android:layout_gravity="center"
        android:background="@drawable/edit_text_bg"
        android:gravity="left|center_vertical"
        android:hint="@string/auth_code"
        android:inputType="number"
        android:maxLength="4" />

    <TextView
        android:id="@+id/register_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:text="@string/register_tip"
        android:textColor="@color/identity_tip"
        android:textSize="@dimen/identity_textsize" />

    <Button
        android:id="@+id/register_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/button_green"
        android:text="@string/next"
        android:layout_marginTop="@dimen/margin_x4"
        android:layout_marginLeft="@dimen/margin_x2"
        android:layout_marginRight ="@dimen/margin_x2"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big" />

</LinearLayout>