<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/empty_ll"
    android:background="@color/common_background"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/device_empty_tip"
        android:layout_marginBottom="@dimen/margin_x2"
        android:textColor="@color/font_black"
        android:textSize="@dimen/text_normal" />

    <TextView
        android:id="@+id/add_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/padding_x4"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:text="@string/device_empty_add"
        android:layout_marginLeft="@dimen/margin_x12"
        android:layout_marginRight="@dimen/margin_x12"
        android:onClick="addDevice"
        android:clickable="true"
        android:textColor="@color/font_white_255"
        android:textSize="@dimen/text_normal" />
</LinearLayout>