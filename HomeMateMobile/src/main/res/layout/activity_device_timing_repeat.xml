            android:layout_centerVertical="true"
            android:textSize="@dimen/text_normal"
            android:text="@string/device_timing_repeat_friday"
            android:textColor="@color/font_black"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/cbFriday"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:button="@drawable/check_box"
            android:layout_marginRight="@dimen/margin_x4"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSaturday"
        android:layout_width="match_parent"
        android:background="@drawable/item_selector"
        android:layout_height="@dimen/bar_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_normal"
            android:text="@string/device_timing_repeat_saturday"
