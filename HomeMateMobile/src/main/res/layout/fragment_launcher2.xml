<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/common_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_above="@+id/imageView6"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_marginBottom="-16dp"
            android:layout_width="wrap_content"
            android:src="@drawable/launcher2_curtain"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_above="@+id/imageView5"
            android:layout_marginBottom="-16dp"
            android:layout_toRightOf="@+id/imageView5"
            android:src="@drawable/launcher2_line2"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_above="@+id/imageView3"
            android:layout_toLeftOf="@+id/imageView4"
            android:layout_width="wrap_content"
            android:src="@drawable/launcher2_light"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_above="@+id/imageView3"
            android:layout_marginBottom="-20dp"
            android:layout_marginRight="@dimen/margin_x4"
            android:layout_toLeftOf="@+id/imageView3"
            android:src="@drawable/launcher2_line1"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_marginLeft="-16dp"
            android:layout_marginBottom="-8dp"
            android:layout_toRightOf="@+id/imageView2"
            android:src="@drawable/launcher2_tv"
            android:layout_above="@+id/imageView2"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="-20dp"
            android:layout_marginBottom="-6dp"
            android:layout_above="@+id/imageView1"
            android:src="@drawable/launcher2_signal"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/launcher2_phone"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/launcher2_line"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/common_background"
        android:layout_weight="4"
        android:layout_height="0dp">
    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_great"
        android:textColor="@color/yellow"
        android:text="@string/launcher2_text1"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/yellow"
        android:text="@string/launcher2_text2"
        android:layout_marginTop="@dimen/margin_x4"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>