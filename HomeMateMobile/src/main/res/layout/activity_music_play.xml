<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/blur_img"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:adjustViewBounds="true"
    android:scaleType="centerCrop"
    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <RelativeLayout
        android:id="@+id/heard"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="#00000000"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_songs"
                android:textSize="16sp"
                android:textColor="#ffffff"
                />
            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#ffffff"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/head_right_ibtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="#00000000"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <com.orvibo.homemate.device.HopeMusic.widget.CircleImageView
        android:id="@+id/cover_img"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_weight="2.5"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"

        />

    <com.orvibo.homemate.device.HopeMusic.widget.DragProgressBar
        android:id="@+id/dragBar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.8"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/mode_ibtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/random_style_selector"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            />
        <ImageButton
            android:id="@+id/pre_ibtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/pre_selector"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"
            android:background="@color/transparent"
            />
        <ImageButton
            android:id="@+id/play_pause_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/transparent"
            android:src="@drawable/play_selector"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:id="@+id/next_ibtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@color/transparent"
            android:layout_marginRight="30dp"
            android:src="@drawable/next_selector"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:background="@color/transparent"
            android:src="@drawable/more_selector"
            android:scaleType="fitXY"
            />

    </LinearLayout>

</LinearLayout>
</FrameLayout>
