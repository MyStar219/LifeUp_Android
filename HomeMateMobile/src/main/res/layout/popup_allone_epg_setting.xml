<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/coco_popup_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_x6"
        android:background="@drawable/coco_device_popup_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/programSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="@dimen/padding_x2"
            android:gravity="center"
            android:text="@string/program_channel_list"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_x2"
            android:layout_marginRight="@dimen/margin_x2"
            android:background="@drawable/line_divide" />

        <TextView
            android:id="@+id/reserveSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="@dimen/padding_x2"
            android:gravity="center"
            android:text="@string/program_reserve_list"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_x2"
            android:layout_marginRight="@dimen/margin_x2"
            android:background="@drawable/line_divide" />

        <TextView
            android:id="@+id/channelSet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="@dimen/padding_x2"
            android:gravity="center"
            android:text="@string/change_channel_table"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_x2"
            android:layout_marginRight="@dimen/margin_x2"
            android:background="@drawable/line_divide" />

        <TextView
            android:id="@+id/settingsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:drawablePadding="@dimen/padding_x2"
            android:gravity="center"
            android:text="@string/setting"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

    </LinearLayout>
</LinearLayout>