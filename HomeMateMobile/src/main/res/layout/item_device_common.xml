<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/deviceIcon"
            android:layout_width="@dimen/margin_x16"
            android:layout_height="@dimen/margin_x16"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/bg_bigcircle_yellow_normal" />

        <com.orvibo.homemate.view.custom.OfflineView
            android:id="@+id/deviceOffLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:gravity="center"
            android:padding="@dimen/padding_x2"
            android:text="@string/offline"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_tinny" />
    </RelativeLayout>

    <TextView
        android:id="@+id/deviceName"
        style="@style/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_x2"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name" />
</LinearLayout>