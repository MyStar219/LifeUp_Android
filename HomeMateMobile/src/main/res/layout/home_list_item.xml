<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal"
        android:background="@drawable/item_selector"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textViewHomeName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/identity_tip"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_marginRight="@dimen/margin_x4"
            android:text="欧瑞博的家"
            android:gravity="center"
            android:textSize="@dimen/text_large" />

        <ImageView
            android:id="@+id/imageViewEdit"
            android:layout_toRightOf="@+id/textViewHomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_x1"
            android:onClick="editHomeName"
            android:background="@drawable/bg_edit_selector"/>

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/checkBoxSelectHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_alignParentRight="true"
            android:onClick="selectHome"
            android:background="@drawable/bg_check_selector"
            android:button="@null" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutHomeMessage"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:onClick="ToNextActivity"
        android:orientation="horizontal"
        android:background="@drawable/item_selector">

        <TextView
            android:layout_marginLeft="@dimen/margin_x4"
            android:gravity="center"
            android:id="@+id/textViewContent"
            android:layout_width="wrap_content"
            android:text="@string/not_floor_and_room"
            android:layout_height="match_parent"
            android:textColor="@color/identity_tip"
            android:textSize="@dimen/text_small" />

        <View
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_gravity="center"
            android:background="@drawable/bg_right_arrow" />

    </LinearLayout>

</LinearLayout>