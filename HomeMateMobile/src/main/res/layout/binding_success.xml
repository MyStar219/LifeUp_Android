<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:navigation="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical" >

    <com.orvibo.homemate.view.custom.NavigationGreenBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        navigation:text="@string/binging_success" />

    <View
        android:layout_height="0.0dip"
        android:layout_width="match_parent"
        android:layout_weight="1" />

    <com.orvibo.homemate.view.custom.TextViewImg
        navigation:left_image="@drawable/icon_right_normal"
        android:id="@+id/register_tips_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/padding_x2"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_x8"
        android:gravity="center"
        android:text="@string/binding_success_tips"
        android:textColor="@color/identity_tip"
        android:textSize="@dimen/identity_textsize" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_x2"
        android:layout_marginRight="@dimen/margin_x2"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:text="@string/add_devices"
        android:textColor="@color/white"
        android:textSize="@dimen/navigation_textsize" />

    <View
        android:layout_height="0.0dip"
        android:layout_width="match_parent"
        android:layout_weight="2" />

</LinearLayout>