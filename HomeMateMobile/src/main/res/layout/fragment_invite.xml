<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding">

    <TextView
        style="?borderlessButtonStyle"
        android:id="@+id/step1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:padding="@dimen/default_padding"
        android:drawableLeft="@drawable/ic_send_code"
        android:drawablePadding="@dimen/default_padding"
        android:gravity="left|center_vertical"
        android:text="@string/send_code"
        />

    <TextView
        style="?borderlessButtonStyle"
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:padding="@dimen/default_padding"
        android:drawableLeft="@drawable/ic_activate_code"
        android:drawablePadding="@dimen/default_padding"
        android:gravity="left|center_vertical"
        android:text="@string/activate_code"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="@string/send_code"
        />

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/double_padding"
            android:gravity="center"
            android:text="@string/message_send_code"
            />

        <EditText
            style="@style/App_EditTextStyle"
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_padding"
            android:inputType="phone"
            />

        <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
            android:id="@+id/spinnerRelationship"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Choose Relationship"
            android:spinnerMode="dropdown"/>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_inset"
            android:text="@string/send_code"
            style="@style/Widget.AppCompat.Button.Colored"/>
    </LinearLayout>
</LinearLayout>