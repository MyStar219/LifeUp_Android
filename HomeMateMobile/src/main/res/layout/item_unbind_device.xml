<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/socket_icon_wh"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/deviceImageView"
            android:layout_width="@dimen/margin_x14"
            android:layout_height="@dimen/margin_x14"
            android:layout_marginLeft="@dimen/margin_x4"
            android:src="@drawable/device_500_coco"/>

        <TextView
            android:id="@+id/addDeviceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_x4"
            android:padding="@dimen/margin_x2"
            android:background="@drawable/unbind_bt_select"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/unbind_add_wifi_device_add_successs"
            android:textColor="@color/scene_textcolor_selector"
            android:textSize="@dimen/text_normal"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_toLeftOf="@id/addDeviceTextView"
            android:layout_toRightOf="@id/deviceImageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="设备名称"
                android:textColor="@color/black"
                android:textSize="@dimen/text_big"/>

            <TextView
                android:id="@+id/productModelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="设备modle"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_normal"/>
        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide"/>
</LinearLayout>