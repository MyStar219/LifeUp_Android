<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_x4"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_x4"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">


    <ImageView
        android:id="@+id/securityImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_x4"
        android:layout_marginLeft="@dimen/margin_x4"
        android:src="@drawable/icon_select_co"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSecurityCondtion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="8888888"
            android:textSize="@dimen/text_big"/>

        <TextView
            android:id="@+id/tvSecurityLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="66666"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_small"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/securityCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_x4"
        android:layout_marginRight="@dimen/margin_x4"
        android:button="@drawable/security_check_box"
        android:clickable="false"
        android:focusable="false"
        android:tag="@string/save"/>
</LinearLayout>