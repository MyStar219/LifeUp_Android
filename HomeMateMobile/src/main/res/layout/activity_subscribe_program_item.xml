<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_height="@dimen/list_item_height">
        <TextView
            android:id="@+id/tvIsHd"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_x8"
            android:textSize="@dimen/text_big"
            android:layout_weight="1"
            android:text="@string/program_normal"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_x4"
            android:textSize="@dimen/text_big"
            android:text="@string/program_living"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvSubscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_x4"
            android:gravity="center"
            android:textColor="@color/red"
            android:layout_marginRight="@dimen/margin_x6"
            android:text="@string/subscribe_cancel"
            android:focusable="false"
            android:layout_alignTop="@+id/ll_program_info"
            android:background="@drawable/bt_cancel_normal"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/gray_white"
        android:layout_height="0.5dp" />
</LinearLayout>