<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:orientation="vertical" >

    <com.orvibo.homemate.view.custom.NavigationCocoBar
        android:id="@+id/navigationCocoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftDrawableLeft="@drawable/back"
        app:centerText="@string/title_activity_select_device_type"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_white" />

    <GridView
        android:id="@+id/type_gv"
        android:background="@color/gray_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="0.6dp"
        android:verticalSpacing="0.6dp"
        android:gravity="center"
        android:numColumns="3"
         />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/gray_white" />
</LinearLayout>
