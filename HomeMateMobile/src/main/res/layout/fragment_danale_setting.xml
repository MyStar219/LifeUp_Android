<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mXmln="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.orvibo.homemate.view.custom.NavigationGreenBar
        android:id="@+id/nbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mXmln:text="@string/device_set_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/margin_x4"
                android:background="@drawable/list_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4">

                <TextView
                    android:id="@+id/deviceNameTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/device_name"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_normal" />

                <TextView
                    android:id="@+id/deviceNameTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_x2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_small" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

            <LinearLayout
                android:id="@+id/ll_picture_rotation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/margin_x4"
                android:background="@drawable/list_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_picture_rotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/picture_rotation"
                    android:textColor="@color/font_learned_white"
                    android:textSize="@dimen/text_normal" />


                <TextView
                    android:id="@+id/tv_picture_rotation_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_x2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/iv_picture_rotation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_small" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

            <LinearLayout
                android:id="@+id/ll_picture_frame"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/list_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/picture_frame"
                    android:textColor="@color/font_learned_white"
                    android:textSize="@dimen/text_normal" />


                <TextView
                    android:id="@+id/tv_picture_frame_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_x2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/iv_picture_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_small" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

            <LinearLayout
                android:id="@+id/ll_motion_detect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/list_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/motion_detection"
                    android:textColor="@color/font_learned_white"
                    android:textSize="@dimen/text_normal" />


                <TextView
                    android:id="@+id/tv_motion_detect_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_x2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/iv_motion_detect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_small" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

            <LinearLayout
                android:id="@+id/ll_sound_detection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/list_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sound_detection"
                    android:textColor="@color/font_learned_white"
                    android:textSize="@dimen/text_normal" />


                <TextView
                    android:id="@+id/tv_sound_detection_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_x2"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_normal" />

                <ImageView
                    android:id="@+id/iv_sound_detection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_small" />

            </LinearLayout>

            <ImageView
                android:id="@+id/device_room_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

<!--            <TextView
                android:id="@+id/unknown_device_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_x2"
                android:layout_marginTop="@dimen/margin_x2"
                android:gravity="center"
                android:text="@string/device_set_find_device"
                android:textColor="@color/font_learned_white"
                android:textSize="@dimen/text_small" />-->

            <LinearLayout
                android:id="@+id/ll_firmware_upgrade"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:layout_marginTop="@dimen/margin_x4"
                android:background="@drawable/list_item"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_firmware_upgrade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/firmware_upgrade"
                        android:textColor="@color/font_learned_white"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_current_rom_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/current_rom_version"
                        android:textColor="@color/font_learned_white"
                        android:layout_marginTop="2dp"
                        android:textSize="@dimen/text_tinny"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/margin_x2">

                    <TextView
                        android:id="@+id/tv_firmware_upgrade_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/text_normal" />

                    <TextView
                        android:id="@+id/tv_firmware_upgrade_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_normal"
                        android:text="@string/keep_the_power_on"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_small" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

<!--            <ImageView
                android:id="@+id/add_remote_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />-->

            <TextView
                android:id="@+id/deviceInfoTextView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@drawable/list_item"
                android:drawableRight="@drawable/arrow_right_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_x4"
                android:paddingRight="@dimen/padding_x4"
                android:text="@string/device_info"
                android:textColor="@color/gray"
                android:textSize="@dimen/text_normal" />

            <ImageView
                android:id="@+id/deviceInfoImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_x8"
                android:background="@drawable/list_item"
                android:text="@string/delete_device"
                android:textColor="@color/red"
                android:textSize="@dimen/text_normal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_divide" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|center_horizontal"
                android:textSize="@dimen/text_tinny"
                android:textColor="@color/font_learned_white"
                android:paddingBottom="4dp"
                android:text="@string/cloud_server_by_danale"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
