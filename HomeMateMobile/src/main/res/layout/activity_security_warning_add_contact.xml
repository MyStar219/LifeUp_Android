<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/common_background"
    android:layout_height="match_parent">

    <com.orvibo.homemate.view.custom.NavigationCocoBar
        android:layout_width="match_parent"
        app:leftDrawableLeft="@drawable/back"
        app:centerText="@string/security_warning_setting_contact_add"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_small"
        android:textColor="@color/gray"
        android:text="@string/security_warning_setting_contact_add_tips"
        android:layout_marginLeft="@dimen/margin_x4"
        android:layout_marginTop="@dimen/margin_x4"
        android:layout_marginRight="@dimen/margin_x4"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_x4"
        android:background="@drawable/line_divide"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="@dimen/list_image_item_height">
        <com.orvibo.homemate.view.custom.EditTextWithCompound
            android:id="@+id/contactEditText"
            android:layout_marginTop="@dimen/margin_x1"
            android:paddingLeft="@dimen/padding_x4"
            android:paddingRight="@dimen/padding_x4"
            android:hint="@string/security_warning_contact_phone_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
            <TextView
                android:id="@+id/tipsTextView"
                android:text="@string/account_phone_number"
                android:layout_marginLeft="@dimen/margin_x4"
                android:layout_marginTop="@dimen/margin_x1"
                android:layout_marginBottom="@dimen/margin_x1"
                android:textSize="@dimen/text_tinny"
                android:textColor="@color/gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/bg_line"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/contactImageView"
            android:layout_width="72dp"
            android:src="@drawable/icon_mail_list_normal"
            android:scaleType="center"
            android:background="@drawable/list_item"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="@drawable/line_divide"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/errorTextView"
        android:layout_marginTop="@dimen/margin_x2"
        android:layout_marginLeft="@dimen/margin_x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/error_icon"
        android:drawablePadding="@dimen/padding_x1"
        android:text="@string/security_warning_setting_contact_add_warn"
        android:textColor="@color/gray"
        android:textSize="@dimen/text_small" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_x8"
        android:layout_marginLeft="@dimen/margin_x8"
        android:layout_marginRight="@dimen/margin_x8"
        android:background="@drawable/btn_login_normal"
        android:text="@string/add"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</LinearLayout>