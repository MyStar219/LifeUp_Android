<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_background"
              android:orientation="vertical">

    <com.orvibo.homemate.view.custom.NavigationCocoBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="@string/auth_login"
        app:leftDrawableLeft="@drawable/back"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_x4"
        android:background="@drawable/line_divide"/>

    <RelativeLayout
        android:id="@+id/weChatRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/padding_x4">

        <ImageView
            android:id="@+id/authWeChatImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_wechat"/>

        <TextView
            android:id="@+id/authWeChatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_toRightOf="@+id/authWeChatImageView"
            android:text="@string/auth_login_wechat_account"
            android:textSize="@dimen/text_big"/>

        <TextView
            android:id="@+id/weChatNickNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_x4"
            android:layout_toLeftOf="@+id/authWeChatArrow"
            android:text="@string/user_phone_no"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_normal"/>

        <ImageView
            android:id="@+id/authWeChatArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_x4"
            android:src="@drawable/arrow_right_small"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:background="@drawable/line_divide"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/qqRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/padding_x4">

        <ImageView
            android:id="@+id/authQqImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_qq"/>

        <TextView
            android:id="@+id/authQqTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_toRightOf="@+id/authQqImageView"
            android:text="@string/auth_login_qq_account"
            android:textSize="@dimen/text_big"/>

        <TextView
            android:id="@+id/qqNickNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_x4"
            android:layout_toLeftOf="@+id/authQqArrow"
            android:text="@string/user_phone_no"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_normal"/>

        <ImageView
            android:id="@+id/authQqArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_x4"
            android:src="@drawable/arrow_right_small"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:background="@drawable/line_divide"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sinaRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_gravity="center_vertical"
        android:background="@drawable/list_item"
        android:paddingLeft="@dimen/padding_x4">

        <ImageView
            android:id="@+id/authSinaImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_microblog"/>

        <TextView
            android:id="@+id/authSinaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_toRightOf="@+id/authSinaImageView"
            android:text="@string/auth_login_sina_account"
            android:textSize="@dimen/text_big"/>

        <TextView
            android:id="@+id/sinaNickNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_x4"
            android:layout_toLeftOf="@+id/authSinaArrow"
            android:text="@string/user_phone_no"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_normal"/>

        <ImageView
            android:id="@+id/authSinaArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_x4"
            android:src="@drawable/arrow_right_small"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_divide"/>


</LinearLayout>