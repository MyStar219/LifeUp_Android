<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <ImageView
            android:id="@+id/iv_program_chennal_icon"
            android:layout_width="@dimen/button_height_small"
            android:layout_height="@dimen/button_height_small"
            android:layout_centerVertical="true"
            android:src="@drawable/pic_tv_station_default"/>

        <TextView
            android:id="@+id/change_channel"
            android:layout_width="@dimen/button_circle_height"
            android:layout_height="@dimen/button_circle_height"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/change_channel"
            android:focusable="false"
            android:background="@drawable/change_chanel_selector"/>

        <TextView
            android:id="@+id/tv_program_chennal_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/change_channel"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:textColor="@color/et_font"
            android:textSize="@dimen/text_big"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_program_chennal_icon"
            android:layout_toLeftOf="@id/tv_program_chennal_id"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_program_chennal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/et_font"
                android:textSize="@dimen/text_normal"/>

            <TextView
                android:id="@+id/tv_program_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/device_name_en_color"
                android:textSize="@dimen/text_small"/>
        </LinearLayout>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/divide_line_color"/>
</LinearLayout>
