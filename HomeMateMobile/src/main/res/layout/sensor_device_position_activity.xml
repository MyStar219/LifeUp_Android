<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:navigationBar="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_background"
    android:layout_height="match_parent">
    <com.orvibo.homemate.view.custom.NavigationGreenBar
        android:id="@+id/nbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        navigationBar:text="@string/device_position"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:columnCount="2"
        android:layout_gravity="center_horizontal"
        android:layout_height="match_parent">
        <LinearLayout android:layout_width="wrap_content"
            android:id="@+id/door"
            android:background="@drawable/device_position_selected"
            android:layout_margin="@dimen/margin_x4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/doorTextView"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/device_position_door_selected"
                android:layout_marginTop="@dimen/margin_x4"
                android:layout_marginLeft="@dimen/margin_x6"
                android:layout_marginRight="@dimen/margin_x6"
                android:layout_marginBottom="@dimen/margin_x4"
                android:drawablePadding="@dimen/padding_x2"
                android:text="@string/device_position_door"
                android:textSize="@dimen/text_big"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:id="@+id/window"
            android:background="@drawable/device_position_selected"
            android:layout_margin="@dimen/margin_x4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/windowTextView"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/device_position_window_selected"
                android:layout_marginTop="@dimen/margin_x4"
                android:layout_marginLeft="@dimen/margin_x6"
                android:layout_marginRight="@dimen/margin_x6"
                android:layout_marginBottom="@dimen/margin_x4"
                android:drawablePadding="@dimen/padding_x2"
                android:text="@string/device_position_window"
                android:textSize="@dimen/text_big"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:background="@drawable/device_position_selected"
            android:id="@+id/drawer"
            android:layout_margin="@dimen/margin_x4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/drawerTextView"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/device_position_drawer_selected"
                android:layout_marginTop="@dimen/margin_x4"
                android:layout_marginLeft="@dimen/margin_x6"
                android:layout_marginRight="@dimen/margin_x6"
                android:layout_marginBottom="@dimen/margin_x4"
                android:drawablePadding="@dimen/padding_x2"
                android:text="@string/device_position_drawer"
                android:textSize="@dimen/text_big"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:background="@drawable/device_position_selected"
            android:id="@+id/other"
            android:layout_margin="@dimen/margin_x4"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/otherTextView"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/device_position_other_selected"
                android:layout_marginTop="@dimen/margin_x4"
                android:layout_marginLeft="@dimen/margin_x6"
                android:layout_marginRight="@dimen/margin_x6"
                android:layout_marginBottom="@dimen/margin_x4"
                android:drawablePadding="@dimen/padding_x2"
                android:text="@string/device_position_other"
                android:textSize="@dimen/text_big"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>