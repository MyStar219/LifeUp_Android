<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="match_parent"
        android:text="18664567586"
        android:textColor="@color/black"
        android:textSize="@dimen/text_large"
        android:layout_toLeftOf="@+id/drag_handle"
        android:maxLines="2"
        android:paddingLeft="@dimen/padding_x4"
        android:gravity="center_vertical"
        android:layout_height="@dimen/list_image_item_height" />

    <ImageView
        android:id="@id/drag_handle"
        android:layout_width="@dimen/account_icon_wh"
        android:src="@drawable/icon_sort_normal"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_height="@dimen/list_image_item_height" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/drag_handle"
        android:layout_centerVertical="true"
        android:src="@drawable/bg_line"
        android:layout_height="wrap_content" />

</RelativeLayout>