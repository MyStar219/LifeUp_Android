<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:clipToPadding="true"
              android:fitsSystemWindows="true"
              android:gravity="center_horizontal"
              >

    <com.orvibo.homemate.view.custom.NavigationGreenBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="@string/personal_about"
        app:leftDrawableLeft="@drawable/back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/navigationBar"
        android:layout_above="@+id/bottom"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:id="@+id/chart_layout"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:background="#fafafa"

        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/energy"
                android:textSize="10sp"
                android:textColor="#999999"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp">
                <com.orvibo.homemate.view.custom.HorizontalListView
                    android:id="@+id/horizontalMonthList"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:visibility="gone"
                    />
                <com.orvibo.homemate.view.custom.HorizontalListView
                    android:id="@+id/horizontalWeekList"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:visibility="gone"
                    />

                <com.orvibo.homemate.view.custom.HorizontalListView
                    android:id="@+id/horizontalDayList"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layerType="software"
                    android:visibility="gone"
                    />
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:id="@+id/level1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    >
                    <TextView
                        android:id="@+id/leve1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0.15"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_toRightOf="@id/leve1_title"
                        android:layout_marginLeft="10dp"
                        android:background="#ececec"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/level2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/level1"
                    android:layout_marginTop="40dp"
                    >
                    <TextView
                        android:id="@+id/leve2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0.1"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_toRightOf="@id/leve2_title"
                        android:layout_marginLeft="10dp"
                        android:background="#ececec"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/level3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/level2"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:id="@+id/leve3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0.05"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_toRightOf="@id/leve3_title"
                        android:layout_marginLeft="10dp"
                        android:background="#ececec"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/level4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/level3"
                    android:layout_marginTop="40dp"
                    >
                    <TextView
                        android:id="@+id/leve4_title"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#999999"
                        android:textSize="10sp"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_toRightOf="@id/leve4_title"
                        android:layout_marginLeft="10dp"
                        android:background="#ececec"
                        android:layout_centerInParent="true"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/chart_layout"
            android:background="#ececec"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/chart_layout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/statistic_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/statistic_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3h20min"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/statistic_level_average"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#333333"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistic_count_average"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0.16kw·h"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ececec"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="horizontal"
            android:id="@+id/average_layout">
            <TextView
                android:id="@+id/statistic_level2_average"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:textColor="#333333"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/statistic_count2_average"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ececec"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
<LinearLayout
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:layout_gravity="bottom"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    >
    <ImageView
        android:id="@+id/day_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        />
    <ImageView
        android:id="@+id/week_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        />
    <ImageView
        android:id="@+id/month_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        />
</LinearLayout>


</RelativeLayout>