<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivDivide"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_x4"
        android:layout_height="@dimen/list_item_height">
        <ImageView
            android:id="@+id/ivChecked"
            android:background="@drawable/timing_repeat_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/text_big"
            android:text="ORVIBO"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/margin_x4"
            android:layout_marginRight="@dimen/margin_x4"
            android:singleLine="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivLock"
            android:layout_width="wrap_content"
            android:background="@drawable/ap_wifi_lock"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/ivRssi"
            android:layout_width="wrap_content"
            android:background="@drawable/ap_wifi_rssi1"
            android:layout_marginRight="@dimen/margin_x4"
            android:layout_marginLeft="@dimen/margin_x2"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivDivideEnd"
        android:layout_width="match_parent"
        android:background="@drawable/line_divide"
        android:layout_height="wrap_content" />
</LinearLayout>